        <dcterms:title>'Ik begon voor Kerst al in paniek te raken'; interview Artistiek leider jakop ahlbom</dcterms:title>
        <dcterms:creator>Harmen Bockma</dcterms:creator>
        <dcterms:date>2011</dcterms:date>
        <dcterms:publisher rdf:resource="http://data.bibliotheek.nl/lexisnexis/vk"/>
