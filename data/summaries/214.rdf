        <dcterms:title>'Inception boeit elke keer weer'; UITSLAG film van het jaar 2010</dcterms:title>
        <dcterms:creator>Bor Beekman</dcterms:creator>
        <dcterms:date>2011</dcterms:date>
        <dcterms:publisher rdf:resource="http://data.bibliotheek.nl/lexisnexis/vk"/>
