        <dcterms:title>De vader  van Tirza  als uitgeholde mens</dcterms:title>
        <dcterms:creator>Jann Ruyters</dcterms:creator>
        <dcterms:date>2010</dcterms:date>
        <dcterms:publisher rdf:resource="http://data.bibliotheek.nl/lexisnexis/trouw"/>
