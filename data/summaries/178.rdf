        <dcterms:title>Schrijver kan niet zonder school; Literatuurles in teken van Mulisch' dood 'Twee vrouwen' en 'De aanslag' favoriet</dcterms:title>
        <dcterms:creator>Hanne Obbink</dcterms:creator>
        <dcterms:date>2010</dcterms:date>
        <dcterms:publisher rdf:resource="http://data.bibliotheek.nl/lexisnexis/trouw"/>
